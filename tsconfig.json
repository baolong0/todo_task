{
  "compilerOptions": {
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "lib": ["es2019", "es2020.string", "es2020.symbol.wellknown"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "src",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "paths": {
      "ViewModels/*": ["view-models/*"],
      "Gateways/*": ["domain/gateways/*"],
      "Models/*": ["domain/models/*"],
      "Repositories/*": ["domain/repositories/*"],
      "Errors/*": ["errors/*"],
      "Injection/*": ["injection/*"],
      "Usecases/*": ["usecases/*"],
      "Utils/*": ["utils/*"],
      "Common/*": ["common/*"],
      "Configs/*": ["configs/*"],
      "Apps/*": ["apps/*"],
      "Sql/*": ["sql/*"],
      "Tests/*": ["tests/*"],
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "tests/*.ts",
    "tests/**/*.ts",
    "src/tests/teardown.js"
  ]
}
